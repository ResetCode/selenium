<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.selenum.dao.AuWishDao">

	<select id="findOne" resultType="com.selenum.model.AuWish">
		select * from au_wish
		where use_status = 0 limit 1
	</select>

	<update id="updateStatusById">
		update au_wish set use_status = #{status}
		where id = #{id}
	</update>

	<insert id="insert">
		INSERT INTO `au_wish` (`id`, `content`, `use_status`) VALUES (#{id}, #{content}, #{useStatus})
	</insert>

	<update id="update">
		UPDATE `au_wish`
		<set>
			<if test="id != null">
				`id` = #{id},
			</if>
			<if test="content != null">
				`content` = #{content},
			</if>
			<if test="useStatus != null">
				`use_status` = #{useStatus},
			</if>
		</set>
		<where>
			`id` = #{id}
		</where>
	</update>
</mapper>
